@model IEnumerable<MB.Data.Object_type>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Object type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Object_type" asp-action="Create" class="btn btn-primary">Create new Object type name</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Object type name
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var object_type in Model)
                {
                <tr>
                    <td width="70%">@object_type.Object_type_name</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Object_type" asp-action="Update" asp-route-Id="@object_type.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Object_type" asp-action="Delete" asp-route-Id="@object_type.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>

