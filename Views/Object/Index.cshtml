@model IEnumerable<MB.Data.Object>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Object List</h2>
        </div>
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
            {
                <div class="col-6 text-right">
                    <a asp-controller="Object" asp-action="Create" class="btn btn-primary">Create new Object</a>
                </div>
            }
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Object name
                    </th>
                    <th>
                        Amount of objects
                    </th>
                    <th>
                        Object material
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obgect in Model)
                {
                <tr>
                    <td width="25%">@obgect.Object_name</td>
                    <td width="25%">@obgect.Amount_of_objects</td>
                    <td width="25%">@obgect.Object_material</td>
                    @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                    {
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Object" asp-action="Update" asp-route-Id="@obgect.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Object" asp-action="Delete" asp-route-Id="@obgect.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    }
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>

