@model MB.Data.Apartment

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Apartment</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Room_number"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Size"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Amount_of_room"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Floor_number"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Price"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Room_number" class="form-control" />
                        <span asp-validation-for="Room_number" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Size" class="form-control" />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Amount_of_room" class="form-control" />
                        <span asp-validation-for="Amount_of_room" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Floor_number" class="form-control" />
                        <span asp-validation-for="Floor_number" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

