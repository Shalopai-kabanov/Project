@model MB.Data.Resident

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Resident</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Surname"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Sex"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Phone_number"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Seria"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Number"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Sex" class="form-control" />
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Phone_number" class="form-control" />
                        <span asp-validation-for="Phone_number" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Seria" class="form-control" />
                        <span asp-validation-for="Seria" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Number" class="form-control" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

