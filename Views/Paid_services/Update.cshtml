@model MB.Data.Paid_services

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Paid service</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="col-6">
                    <label asp-for="Name_of_paid_service"></label>
                    <input asp-for="Name_of_paid_service" class="form-control" />
                    <span asp-validation-for="Name_of_paid_service" class="text-danger"></span>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Update" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

